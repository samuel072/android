<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.yike"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@color/pure_white"
    android:gravity="center_vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/tv_video_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="16dp"
        android:layout_alignTop="@+id/imageView1"
        android:layout_toRightOf="@+id/imageView1"
        android:text="北京草莓音乐节北京草莓音乐节"
        android:textColor="@color/text_black_hl"
        android:singleLine="true"
        android:textSize="17sp" />

    <com.yike.view.RoundAngleImageView
        android:id="@+id/imageView1"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        app:roundHeight="5dp"
        app:roundWidth="5dp"
        android:layout_marginLeft="9dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignLeft="@+id/tv_video_name"
        android:gravity="center_vertical"
        android:text="人气：4953万人"
        android:layout_marginBottom="5dp"
        android:textColor="@color/text_black_l"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="2015-7-25"
        android:layout_above="@id/textView2"
        android:layout_marginTop="6dp"
        android:layout_alignLeft="@+id/tv_video_name"
        android:layout_toRightOf="@id/imageView1"
        android:layout_below="@id/tv_video_name"
        android:textColor="@color/text_black_l"
        android:textSize="13sp" />
</RelativeLayout>