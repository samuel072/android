<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.yike"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical" >

    <!-- 引用底部导航栏的布局文件 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/navi_height"
        android:background="@color/topbar_bg"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/img_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/return_arrow" />

        <Button
            android:id="@+id/back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="个人信息"
            android:textColor="@color/pure_white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/pure_white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/userinfo_imgArea"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clickable="true" >

            <com.yike.view.RoundAngleImageView
                android:id="@+id/userinfo_userImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                app:roundHeight="25dp"
                app:roundWidth="25dp" />

            <TextView
                android:id="@+id/client_userNameTet"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="头像"
                android:textSize="16sp"
                android:textColor="@color/text_black" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line_grey" />

        <RelativeLayout
            android:id="@+id/userinfo_nameArea"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true" >

            <TextView
                android:id="@+id/userinfo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="center_vertical"
                android:text="name"
                android:textColor="@color/text_grey_sub"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/_name"
                android:textColor="@color/text_black"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line_grey" />

        <RelativeLayout
            android:id="@+id/userinfo_phoneArea"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true" >

            <TextView
                android:id="@+id/userinfo_phoneTet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="center_vertical"
                android:text="phone"
                android:textColor="@color/text_grey_sub"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/_phone"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line_grey" />

        <RelativeLayout
            android:id="@+id/userinfo_emailArea"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            android:clickable="true" >

            <TextView
                android:id="@+id/userinfo_emialTet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="center_vertical"
                android:text="无"
                android:textColor="@color/text_grey_sub"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/_emial"
                android:textColor="@color/text_black"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>